<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StatActivity">

    <TextView
            android:text="Average speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAveSpeedLabel" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="70dp" android:layout_marginStart="60dp"/>
    <TextView
            android:text="Distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDistanceLabel" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="140dp" android:layout_marginStart="60dp"
            app:layout_constraintTop_toBottomOf="@+id/txtAveSpeedLabel"/>
    <TextView
            android:text="Maximum speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMaxSpeedLabel" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"
            android:layout_marginTop="140dp"
            app:layout_constraintTop_toBottomOf="@+id/txtDistanceLabel"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAveSpeed" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/txtAveSpeedLabel" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/txtAveSpeedLabel"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDistance" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/txtDistanceLabel" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/txtDistanceLabel"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMaxSpeed" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/txtMaxSpeedLabel" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/txtMaxSpeedLabel"/>
</android.support.constraint.ConstraintLayout>