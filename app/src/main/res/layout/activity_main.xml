<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity"
                                             tools:layout_editor_absoluteY="81dp">

    <TextView
            android:id="@+id/altitudeLabel"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:text="@string/altitude"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/speedLabel"/>
    <TextView
            android:id="@+id/altitudeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="56dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.008"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/speedTextView"/>
    <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp"
            android:onClick="onClick"
            android:text="@string/start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="161dp"/>

    <TextView
            android:id="@+id/durationLabel"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:text="@string/duration"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp"
            android:layout_marginTop="111dp" app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
            android:id="@+id/durationTextView"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginEnd="56dp"
            android:textSize="24sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/durationLabel"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/speedLabel"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:text="@string/speed"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/durationLabel"/>

    <TextView
            android:id="@+id/speedTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="56dp"
            android:textSize="24sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/speedLabel"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="Trip history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/openView" android:onClick="onClick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/startButton" android:layout_marginStart="21dp"/>
</android.support.constraint.ConstraintLayout>